{
  "name": "neo-commerce-monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "dev": "pnpm --recursive run dev",
    "build": "pnpm --recursive run build",
    "lint": "pnpm --recursive run lint",
    "test": "pnpm --recursive run test",
    "format": "pnpm --recursive run format",
    "db:migrate": "pnpm --filter web prisma migrate deploy",
    "db:push": "pnpm --filter web prisma db push",
    "db:seed": "pnpm --filter web prisma db seed"
  },
  "workspaces": [
    "apps/web",
    "apps/ai",
    "packages/ui"
  ]
}
